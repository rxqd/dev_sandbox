entrypoint = "current/src/index.ts"

hidden = [".config", "bun.lockb"]
modules = ["bun-1.0:v21-20240213-3f08513"]

[nix]
channel = "stable-23_11"

[deployment]
build = ["sh", "-c", "mkdir .build && bun build current/src/index.ts > current/.build/index.js"]
run = ["bun", "current/.build/index.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80
